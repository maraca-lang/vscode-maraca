{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Maraca",
  "patterns": [
    {
      "include": "#main"
    }
  ],
  "repository": {
    "main": {
      "patterns": [
        {
          "begin": "(\\()",
          "end": "(\\))",
          "captures": {
            "1": { "name": "storage.type.maraca" }
          },
          "patterns": [
            {
              "include": "#expr"
            }
          ]
        },
        {
          "include": "#block"
        },
        {
          "name": "constant.character.escape.maraca",
          "match": "\\\\(\\S|\\n| )"
        },
        {
          "name": "variable.other.maraca",
          "match": "@([a-zA-Z0-9]+|\"[^\"]*\")"
        },

        {
          "name": "markup.raw.maraca",
          "match": "[a-zA-Z0-9]+"
        },
        {
          "name": "markup.raw.maraca",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string"
            }
          ]
        }
      ]
    },
    "expr": {
      "patterns": [
        {
          "name": "keyword.operator.maraca",
          "match": "<=|>=|<|>|=|\\+|\\-|\\*|/|%|\\^|!|\\.|\\|"
        },
        {
          "include": "#main"
        }
      ]
    },
    "block": {
      "patterns": [
        {
          "begin": "(<)",
          "end": "(>)",
          "captures": {
            "1": { "name": "storage.type.maraca" }
          },
          "patterns": [
            {
              "name": "support.type.maraca",
              "match": "([a-zA-Z0-9]+|\"[^\"]*\")?(\\+=|=>>>|=>>|=>|=)"
            },
            {
              "include": "#main"
            }
          ]
        },
        {
          "begin": "(\\[)",
          "end": "(\\])",
          "captures": {
            "1": { "name": "storage.type.maraca" }
          },
          "patterns": [
            {
              "name": "support.type.maraca",
              "match": "([a-zA-Z0-9]+|\"[^\"]*\")?(\\+=|=>>>|=>>|=>|=)"
            },
            {
              "include": "#main"
            }
          ]
        },
        {
          "begin": "(\\{)",
          "end": "(\\})",
          "captures": {
            "1": { "name": "storage.type.maraca" }
          },
          "patterns": [
            {
              "name": "support.type.maraca",
              "match": "([a-zA-Z0-9]+|\"[^\"]*\")?(\\+=|=>>>|=>>|=>|=)"
            },
            {
              "include": "#main"
            }
          ]
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "constant.character.escape.maraca",
          "match": "\\\\[\\S\\s]"
        },
        {
          "include": "#block"
        }
      ]
    }
  },
  "scopeName": "source.maraca"
}
